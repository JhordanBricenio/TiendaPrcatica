

<div class="container">
    <h1 class="footer">Crear Nota</h1>
    <form action="/product/Update?id=@Model.Id" method="post">
        <div class="mb-3">
          <label for="Name" class="form-label">Name</label>
          <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" placeholder="Name" required="required">
          @Html.ValidationMessage("Name")
        </div>

       <div class="col-6">
            <div class="mb-3">
              <label for="Stock" class="form-label">Stock</label>
              <input type="text" class="form-control" id="Stock" name="Stock" value="@Model.Stock" placeholder="Stock" required="required">
              @Html.ValidationMessage("Stock")
            </div>
            <div class="mb-3">
              <label for="Price" class="form-label">Price Unit</label>
              <input type="text" class="form-control" id="Price" name="Price" value="@Model.Price" placeholder="Price" required="required">
              @Html.ValidationMessage("Price")
            </div>
            <div class="mb-3">
              <label for="DateProd" class="form-label">Fecha Prod</label>
              <input type="datetime" class="form-control" id="DateProd" name="DateProd" value="@Model.DateProd" placeholder="DateProd" required="required">
              @Html.ValidationMessage("DateProd")
            </div>
                    <div class="mb-3">
              <label for="DateVenc" class="form-label">Fecha Venc</label>
              <input type="datetime" class="form-control" id="DateVenc" name="DateVenc" value="@Model.DateVenc" placeholder="DateVenc" required="required">
              @Html.ValidationMessage("DateVenc")
            </div>
       </div>

            <button type="submit" class="btn btn-dark">Actualizar</button>
            <a href="/" title="Editar" class="btn btn-success  ml-2" role="button">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-circle" viewBox="0 0 16 16">
                  <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-4.5-.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z"/>
                </svg>
            </a>
    </form>

</div>